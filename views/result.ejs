<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #111;
            color: white;
        }
        .movie-card {
            transition: transform 0.3s, box-shadow 0.3s;
            background: #1b1b1b;
            border: none;
            cursor: pointer;
        }
        .movie-card:hover {
            transform: scale(1.08);
            box-shadow: 0px 10px 20px rgba(255, 0, 0, 0.3);
        }
        .movie-card img {
            height: 350px;
            object-fit: cover;
        }
        .page-title {
            font-size: 28px;
            font-weight: bold;
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>

<body>

    <!-- Custom Back Button -->
    <div class="container text-start mt-3">
        <a href="/" class="btn btn-danger px-4">‚¨Ö Back</a>
    </div>

    <h2 class="page-title">Search Results</h2>

    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-md-4 g-4">

            <% x['Search'].forEach(function(movie){ %>
            <div class="col">
                <div class="card movie-card h-100">
                    <img src="<%= movie.Poster !== 'N/A' ? movie.Poster : 'https://via.placeholder.com/300x400?text=No+Image' %>" alt="<%= movie.Title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= movie.Title %></h5>
                        <p class="text-muted">Release: <%= movie.Year %></p>
                        <p class="text-muted">Type: <%= movie.Type %></p>
                        <a href="https://www.imdb.com/title/<%= movie.imdbID %>/" target="_blank" class="btn btn-outline-light btn-sm">
                            üîç View IMDb
                        </a>
                    </div>
                </div>
            </div>
            <% }) %>

        </div>
    </div>

    <script>
        // Back Button -> Always go to Home Page
        history.pushState(null, null, location.href);
        window.onpopstate = function () {
            window.location.href = "/";
        };
    </script>
</body>
</html>
